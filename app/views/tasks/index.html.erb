<h1>タスク管理</h1>


    <% if logged_in? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
  <% @tasks.each do |tasks| %>
    <tr>
      <td><%= link_to tasks.id, tasks %></td>
      <td><%= tasks.status %></td> 
      <td><%= tasks.content %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
  <div>
    
    <%== pagy_bootstrap_nav(@pagy) %>
    
  </div>
  
  <%= link_to '新規タスクの投稿', new_tasks_path, class: "btn btn-primary" %>
    

<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
       <h1>Welcome to the Tasklist</h1>
       <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
