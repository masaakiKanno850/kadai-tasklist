<div class="row">
  <div class="col-6">

    <%= form_with(model: tasks) do |f| %>
       <% if tasks.errors.any? %>
         <div id="error_explanation">
           <ul class="mb-0">
               <% tasks.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
               <% end %>
           </ul>
         </div>
       <% end %>
  
  <div class="mb-3">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content, class: 'form-control' %>

  <%= f.submit '投稿', class: 'btn btn-primary'  %>
<% end %>